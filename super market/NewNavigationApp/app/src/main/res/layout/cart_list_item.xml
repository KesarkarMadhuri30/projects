<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/delete"
        android:text="Kelloggs Corn Flakes Honey"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/product_image"
        android:layout_toRightOf="@+id/product_image" />

    <TextView
        android:id="@+id/product_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/product_name"
        android:layout_below="@+id/product_name"
        android:layout_marginTop="5dp"
        android:text="MRP: "
        android:textSize="16dp"
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/product_Mrpvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/product_mrp"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@+id/product_mrp"
        android:text="Rs.20000"
        android:textSize="16dp"
        android:textColor="#757575"/>



    <TextView
        android:id="@+id/qty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_mrp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="3dp"
        android:text="Quantity:  "
        android:textSize="16dp"
        android:textColor="#757575"

        />

     <Button
        android:id="@+id/decrement_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#c1bdbd"
        android:textSize="18dp"
         android:text="-"
         android:textStyle="bold"
         android:layout_below="@+id/product_mrp"
         android:layout_toEndOf="@+id/qty_text"
         android:layout_toRightOf="@+id/qty_text"
         android:padding="5dp"

         />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="1"
        android:textSize="22sp"
        android:layout_below="@+id/product_mrp"
        android:layout_toEndOf="@+id/decrement_button"
        android:layout_toRightOf="@+id/decrement_button"
        />

    <Button
        android:id="@+id/increment_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#c1bdbd"
        android:textSize="18dp"
        android:text="+"
        android:layout_below="@+id/product_mrp"
        android:layout_toEndOf="@+id/quantity_text_view"
        android:layout_toRightOf="@+id/quantity_text_view"
        android:padding="5dp"

        />

    <TextView
        android:id="@+id/product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qty_text"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="3dp"
        android:text="Rs."
        android:textColor="#191919"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/product_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qty_text"
        android:layout_marginTop="3dp"
        android:text=" 5000"
        android:textColor="#191919"
        android:textSize="20dp"
        android:layout_toEndOf="@+id/product"
        android:layout_toRightOf="@+id/product"
        />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/product_value"
        android:layout_marginTop="5dp"
        android:background="#c1bebe"
        />

</RelativeLayout>